    "high": {
      "immediate_notify": true,
      "escalate_after_minutes": 15,
      "escalate_to": ["lead@orch-next.com"]
    },
    "medium": {
      "immediate_notify": false,
      "escalate_after_minutes": 60,
      "escalate_to": []
