{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Work Progress Placeholder",
  "type": "object",
  "properties": {
    "progress": {
      "type": "object",
      "properties": {
        "tasks_in_progress": { "type": "integer", "minimum": 0 },
        "completed_today": { "type": "integer", "minimum": 0 },
        "queued": { "type": "integer", "minimum": 0 }
      },
      "required": ["tasks_in_progress", "completed_today", "queued"],
      "additionalProperties": false
    },
    "note": { "type": "string" },
    "timestamp": { "type": "string", "format": "date-time" }
  },
  "required": ["progress", "timestamp"],
  "additionalProperties": false
}