{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Quality Dashboard Prediction Summary",
  "type": "object",
  "properties": {
    "current_metrics": {
      "type": "object",
      "properties": {
        "test_coverage": { "type": "number", "minimum": 0, "maximum": 1 },
        "code_complexity": { "type": "number", "minimum": 0 },
        "error_rate": { "type": "number", "minimum": 0, "maximum": 1 },
        "performance_score": { "type": "number", "minimum": 0, "maximum": 1 }
      },
      "required": ["test_coverage", "code_complexity", "error_rate", "performance_score"],
      "additionalProperties": false
    },
    "prediction": {
      "type": "object",
      "properties": {
        "prediction": { "type": "integer", "enum": [0, 1] },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "recommendation": { "type": "string" }
      },
      "required": ["prediction", "confidence"],
      "additionalProperties": true
    },
    "feature_importance": {
      "type": "object",
      "additionalProperties": { "type": "number" }
    }
  },
  "required": ["current_metrics", "prediction"],
  "additionalProperties": false
}