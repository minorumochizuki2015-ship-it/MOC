{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Realtime Metrics Response",
  "type": "object",
  "properties": {
    "metrics": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "cpu_usage": { "type": "number", "minimum": 0, "maximum": 100 },
          "memory_usage": { "type": "number", "minimum": 0, "maximum": 100 },
          "disk_usage": { "type": "number", "minimum": 0, "maximum": 100 },
          "active_tasks": { "type": "integer", "minimum": 0 },
          "pending_approvals": { "type": "integer", "minimum": 0 },
          "system_health": { "type": "string" },
          "ai_prediction_accuracy": { "type": "number", "minimum": 0, "maximum": 1 },
          "automation_rate": { "type": "number", "minimum": 0, "maximum": 1 },
          "alert_count": { "type": "integer", "minimum": 0 }
        },
        "required": [
          "cpu_usage",
          "memory_usage",
          "disk_usage",
          "active_tasks",
          "pending_approvals",
          "system_health",
          "ai_prediction_accuracy",
          "automation_rate",
          "alert_count"
        ],
        "additionalProperties": true
      }
    },
    "count": { "type": "integer", "minimum": 0 },
    "timestamp": { "type": "string", "format": "date-time" }
  },
  "required": ["metrics", "count", "timestamp"],
  "additionalProperties": false
}